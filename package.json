{
  "name": "codescope",
  "displayName": "CodeScope",
  "description": "Inspect function-level dependencies and potential impact of changes.",
  "version": "0.1.0",
  "engines": {
      "vscode": "^1.82.0"
  },
  "categories": [
      "Other"
  ],
  "activationEvents": [
      "onLanguage:typescript",
      "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
      "commands": [
          {
              "command": "codescope.inspect",
              "title": "CodeScope: Inspect File Dependencies"
          }
      ],
      "keybindings": [
          {
              "command": "codescope.inspect",
              "key": "ctrl+shift+d",
              "mac": "cmd+shift+d"
          }
      ],
      "viewsContainers": {
          "activitybar": [
              {
                  "id": "codescope-view-container",
                  "title": "CodeScope",
                  "icon": "$(search-fuzzy)"
              }
          ]
      },
      "views": {
          "codescope-view-container": [
              {
                  "id": "codescope.dependencyView",
                  "name": "Dependency Inspector",
                  "type": "webview"
              }
          ]
      }
  },
  "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
      "@types/vscode": "^1.82.0",
      "@types/node": "16.x",
      "typescript": "^5.1.6"
  },
  "license": "UNLICENSED"
}